# Base
PORT=3000
NODE_ENV=development
CORS_ORIGIN=*

# JWT verify (Gateway ТІЛЬКИ перевіряє access-токен)
# JWT_ALG=RS256
# JWT_PUBLIC_KEY_PATH=/run/secrets/jwt_public.pem
# Якщо HS256:
JWT_ALG=HS256
JWT_SECRET=supersecret

# Таймаути/ретраї
REQUEST_TIMEOUT_MS=10000
PROXY_TIMEOUT_MS=15000
RETRIES=2

# Redis для Idempotency (опційно; якщо порожньо — in-memory fallback)
REDIS_URL=redis://redis.apps.svc.cluster.local:6379
IDEMPOTENCY_TTL_SECONDS=86400

# Upstream сервіси (Cluster DNS або локальні при docker-compose)
AUTH_SERVICE_URL=http://auth-service:3001
TRIP_SERVICE_URL=http://trip-service:3002
INTEGRATION_SERVICE_URL=http://integration-service:3003
AI_SERVICE_URL=http://ai-recommender:8000

# Swagger базова інфо
PUBLIC_BASE_URL=http://localhost:3000
